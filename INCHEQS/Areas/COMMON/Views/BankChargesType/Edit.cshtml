@using INCHEQS.Security;
@using INCHEQS.Resources;
@using INCHEQS.TaskAssignment;
@using (Html.BeginForm("Update", "BankChargesType", FormMethod.Post, new { @Class = "secure-form" })) {
@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>@Locale.BankChargesTypeEdit</h4>
    
    <hr />
    <span class="red"><i>*@Locale.RequiredField</i></span>
    <table class="table form-table table-no-border">
        <tbody>
            <tr>
                <th>@Locale.BankChargesType</th>
              
                <td>
                    <input type="text" value="@ViewBag.bankcharges.fldBankChargesType" disabled />
                    <input type="text" name="fldBankChargesType" value="@ViewBag.bankcharges.fldBankChargesType" hidden />
                    <span class="red-star">*</span>
                </td>
            </tr>
            <tr>
                <th>@Locale.BankChargesTypeDesc</th>
         
                <td>
                    <input type="text" name="fldBankChargesDesc" value="@ViewBag.bankcharges.fldBankChargesDesc" autocomplete="off" maxlength="50" />
                    <span class="red-star">*</span>
                </td>
            </tr>
        </tbody>
    </table>
    <button type="submit" data-action="@Url.Action("/UPDATE")" Class="btn btn-default normal-submit-save-action-button @(CurrentUser.HasTask(TaskIdsOCS.BankChargesType.UPDATE) ? "" : "hidden")">@Locale.SaveBtn</button>
    <a href="@Url.Action("/Index")" class="btn btn-default secure-nav  @(CurrentUser.HasTask(TaskIdsOCS.BankChargesType.INDEX) ? "" : "hidden")">@Locale.btnClose</a>
</div>
}

