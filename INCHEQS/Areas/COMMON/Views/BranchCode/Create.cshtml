@using INCHEQS.Security
@using INCHEQS.TaskAssignment
@using INCHEQS.Resources
@using (Html.BeginForm("SaveCreate", "BranchCode", FormMethod.Post, new { @Class = "secure-form" }))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>@Locale.BranchCodeMaintenanceAdd</h4>
    <hr />
    <span class="red"><i>*@Locale.RequiredField</i></span>
    <table class="table form-table table-no-border">
        <TBODY>
            <tr>
                <th>@Locale.BankType</th>
                <td>
                    <select class="default" name="bankTypeId" maxlength="20">
                        @foreach (var row in ViewBag.BankType.Rows)
                        {
                            <option value="@row["fldBankType"]">
                                @row["fldBankType"] - @row["fldBankTypeDesc"]
                            </option>
                        }
                    </select>
                    <span class="red-star"> *</span>
                </td>
            </tr>
            <tr>
                <th>@Locale.BranchID</th>
                <td>
                    <input style="width:250px" type="text" id="branchId" class="number-only" name="branchId" maxlength="8" /><span class="red-star"> *</span>
                </td>
            </tr>
            <tr>
                <th>@Locale.BankCode</th>
                <td>
                    <input type="text" id="fldBankCode" name="fldBankCode" style="border: none; width:250px" readonly />
                    <input type="hidden" id="bankCode" name="bankCode" readonly />
                </td>
            </tr>
            <tr>
                <th>@Locale.StateCode</th>
                <td>
                    <input type="text" id="fldStateCode" name="fldStateCode" style="border: none; width:250px" readonly />
                    <input type="hidden" id="stateCode" name="stateCode" readonly />
                </td>
            </tr>
            <TR>
                <Th>@Locale.BranchCode </Th>

                <td>
                    <input type="text" id="branchcode" name="branchcode" style="border: none; width:250px" readonly />
                </td>
            </TR>
            <TR>
                <Th>@Locale.BranchDescription</Th>
                <td>
                    <input style="width:250px;" type="text" name="branchDesc" maxlength="100"><span class="red-star"> *</span>
                </td>
            </TR>
            <tr>
                <th>@Locale.BusinessType</th>
                <td>
                    @Locale.CONV<input type="radio" name="businessType" value="1" /> &nbsp;&nbsp;&nbsp;
                    @Locale.SPI<input type="radio" name="businessType" value="2" /> &nbsp;&nbsp;&nbsp;
                    <span class="red-star"> *</span>
                    <input type="radio" name="businessType" value="" hidden checked />
                </td>
            </tr>
            @*<tr>
                <th>@Locale.BusinessType</th>
                <td>
                    @Locale.CONV<input type="radio" name="businessType" value="1" /> &nbsp;&nbsp;&nbsp;
                    @Locale.SPI<input type="radio" name="businessType" value="2" /> &nbsp;&nbsp;&nbsp;
                    <span class="red-star"> *</span>
                    <input type="radio" name="businessType" value="" hidden checked />
                </td>
            </tr>*@
        </TBODY>
    </table>

    <button type="submit" data-action="@Url.Action("/SAVECREATE")" Class="btn btn-default normal-submit-save-action-button   @(CurrentUser.HasTask(TaskIds.BranchCode.CREATE) ? "" : "hidden")">@Locale.SaveBtn</button>
    <a href="@Url.Action("Create")" class="btn btn-default secure-nav @(CurrentUser.HasTask(TaskIds.BranchCode.INDEX) ? "" : "hidden")">@Locale.btnReset</a>
    <a href="@Url.Action("Index")" class="btn btn-default secure-nav @(CurrentUser.HasTask(TaskIds.BranchCode.INDEX) ? "" : "hidden")">@Locale.btnClose</a>

</div>
}

@*<script src="~/Scripts/App/states.js"></script>*@
@Scripts.Render("~/bundles/BankBranchMaintDetails")

