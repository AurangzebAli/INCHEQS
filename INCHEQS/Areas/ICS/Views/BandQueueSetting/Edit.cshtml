@using INCHEQS.Security;
@using INCHEQS.Resources;
@using INCHEQS.TaskAssignment;
@using (Html.BeginForm("Update", "BandQueueSetting", FormMethod.Post, new { @Class = "secure-form" })) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Maintenance - Band Queue Setting</h4>
        <hr />
        <span class="red"><i>*@Locale.RequiredField</i></span>
        <table class="table form-table table-no-border">
            <tbody>
                <tr>
                    <th>Band Level</th>
                    <td>
                        <input type="hidden" value="@ViewBag.BandQueueSetting.fldTaskId" name="fldTaskId" />@ViewBag.BandQueueSetting.fldMenuTitle
                    </td>
                </tr>
                <tr>
                    <th>Band Lower Limit</th>
                    <td>
                        <input type="text" value="@ViewBag.BandQueueSetting.fldBandLBound" name="fldBandLBound" />
                    </td>
                </tr>
                <tr>
                    <th>Band Upper Limit</th>
                    <td>
                        <input type="text" value="@ViewBag.BandQueueSetting.fldBandUBound" name="fldBandUBound" />
                    </td>
                </tr>
                <tr>
                    <th>Vol. Percent(%)</th>
                    <td>
                        <input type="text" value="@ViewBag.BandQueueSetting.fldVolumnPercentage" name="fldVolumnPercentage" />
                    </td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>
                        <input type="radio" value="Y" name="fldActive" @(ViewBag.BandQueueSetting.fldActive == "Y" ? "checked" : "")/>Yes
                        <input type="radio" value="N" name="fldActive" @(ViewBag.BandQueueSetting.fldActive == "N" ? "checked" : "")/>No
                    </td>
                </tr>

            </tbody>
        </table>
        <button type="submit" Class="btn btn-default @(CurrentUser.HasTask(TaskIds.BandQueueSetting.UPDATE) ? "" : "hidden")">@Locale.SaveBtn</button>
        <a href="@Url.Action("Index")" Class="btn btn-default secure-nav  @(CurrentUser.HasTask(TaskIds.BandQueueSetting.INDEX) ? "" : "hidden")">@Locale.Back</a>
    </div>
}