@using INCHEQS.Resources
@using INCHEQS.Models.SearchPageConfig;
<h2 class="hidden">@ViewBag.SearchResult.PageTitle</h2>
    <table id="search-result-table" class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                @Html.Partial("SearchPage/_TableHeaderColumns")
                @if (ViewBag.TaskRole != "OutwardReturn")
                {
                                <th>@Locale.Action</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (List<DataField> row in ViewBag.SearchResult.TableData)
            {
            <tr>
                @Html.Partial("SearchPage/_TableBodyColumns", row)
                @if (ViewBag.TaskRole != "OutwardReturn")
                {
                <td>
                    
                        @*<a href="" class="btn btn-default btn-xs row-modal-submit-outward-detail" data-action="@Url.Action("OutwardReturnDetail")" data-title="Detail">Detail</a>
                        <a href="" class="btn btn-default btn-xs row-action-submit-ajax" data-action="@Url.Action("OutwardReturnRegenerate")">Regenerate</a>*@
                        <a href="" class="btn btn-default btn-xs row-action-submit-ajax hidden" data-action="@Url.Action("ClearRemark")">Clear Remark</a>
                        <a href="" class="btn btn-default btn-xs row-action-download" data-action="@Url.Action("Download")">Download</a>
                        <a href="" class="btn btn-default btn-xs row-action-sendFTP" data-action="@Url.Action("SendFTP")">@Locale.Send</a>
                </td>
                }
            </tr>
            }
        </tbody>
        <tfoot>            
            @Html.Partial("SearchPage/_TablePaginationFooter")
        </tfoot>
    </table>


@Scripts.Render("~/bundles/SearchResultPage")


<div id="outwardDetailModal" class="modal" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Detail</h4>
            </div>
            <div class="modal-body">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Locale.btnClose</button>
            </div>
        </div>

    </div>
</div>