@using INCHEQS.Resources
@using INCHEQS.Common
@{
    ViewBag.Title = "ReadyitemToPostedHistory";
    var i = 0;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_ReadyitemToPostedHistory</title>
</head>
<body>
    <div style="overflow-y: scroll; height:500px;">
        <table class="table table-bordered">
            <tr>Normal Item Ready for UPI Details</tr>
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Issuing Bank Branch</th>
                    <th>UIC</th>
                    <th>Amount</th>
                    <th>Reject Code</th>
                  </tr>
            </thead>
            <tbody>
                @foreach (var row in ViewBag.PostedHistory.Rows)
                {

                <tr>
                    <td>@{i++;} @i</td>
                    <td>@row["fldIssueBankBranch"]</td>
                    <td>@row["fldUIC"]</td>
                    <td align="right">@StringUtils.FormatCurrency((row["fldAmount"]).ToString())</td>
                    <td>@row["fldRejectCode"]</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
