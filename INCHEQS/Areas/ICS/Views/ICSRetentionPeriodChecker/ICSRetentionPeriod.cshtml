@using INCHEQS.Resources
@using INCHEQS.TaskAssignment
@using INCHEQS.Security
@using (Html.BeginForm("ICSRetentionPeriod", "ICSRetentionPeriodChecker", FormMethod.Post, new { @Class = "secure-form " }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
    <h4>Maintenance - System Setting - ICS Retention Period</h4>
    <hr />

    <table class="table form-table table-no-border">

        <tr>
            <th>
                Inward Clearing Retention Period
            </th>
            <td>

                @if (@ViewBag.ICSRetentionPeriodTemp.ICInt != @ViewBag.ICSRetentionPeriod.ICInt)
                {
                    <input type="text" id="ICInt" name="ICInt" STYLE="color: #FFFFFF;background-color: #FF0000;" value="@ViewBag.ICSRetentionPeriodTemp.ICInt" maxLength=3 class="number-only" disabled>
                }
                else
                {
                    <input type="text" id="ICInt" name="ICInt" value="@ViewBag.ICSRetentionPeriodTemp.ICInt" maxLength=3 class="number-only" disabled>
                }

                @if (@ViewBag.ICSRetentionPeriodTemp.ICIntType != @ViewBag.ICSRetentionPeriod.ICIntType)
                {
                    <select name="ICIntType" id="ICIntType" class="textbox" STYLE="color: #FFFFFF;background-color: #FF0000;" disabled>
                        <option value="" selected="selected"></option>
                        @foreach (var item in @ViewBag.ListInterval)
                        {
                            <option value="@item.IntType" @(ViewBag.ICSRetentionPeriodTemp.ICIntType == item.IntType ? "selected" : "")>@item.IntType</option>
                        }
                    </select>
                }
                else
                {
                    <select name="ICIntType" id="ICIntType" class="textbox" disabled>
                        <option value="" selected="selected"></option>
                        @foreach (var item in @ViewBag.ListInterval)
                        {
                            <option value="@item.IntType" @(ViewBag.ICSRetentionPeriodTemp.ICIntType == item.IntType ? "selected" : "")>@item.IntType</option>
                        }
                    </select>
                }
            </td>
        </tr>

        <tr>
            <th>
                Inward Clearing History Retention Period
            </th>
            <td>

                @if (@ViewBag.ICSRetentionPeriodTemp.ICHistoryInt != @ViewBag.ICSRetentionPeriod.ICHistoryInt)
                {
                    <input type="text" id="ICHistoryInt" name="ICHistoryInt" STYLE="color: #FFFFFF;background-color: #FF0000;" value="@ViewBag.ICSRetentionPeriodTemp.ICHistoryInt" maxLength=3 class="number-only" disabled>
                }
                else
                {
                    <input type="text" id="ICHistoryInt" name="ICHistoryInt" value="@ViewBag.ICSRetentionPeriodTemp.ICHistoryInt" maxLength=3 class="number-only" disabled>
                }

                @if (@ViewBag.ICSRetentionPeriodTemp.ICHistoryIntType != @ViewBag.ICSRetentionPeriod.ICHistoryIntType)
                {
                    <select name="ICHistoryIntType" id="ICHistoryIntType" class="textbox" STYLE="color: #FFFFFF;background-color: #FF0000;" disabled>
                        <option value="" selected="selected"></option>
                        @foreach (var item in @ViewBag.ListInterval)
                        {
                            <option value="@item.IntType" @(ViewBag.ICSRetentionPeriodTemp.ICHistoryIntType == item.IntType ? "selected" : "")>@item.IntType</option>
                        }
                    </select>
                }
                else
                {
                    <select name="ICHistoryIntType" id="ICHistoryIntType" class="textbox" disabled>
                        <option value="" selected="selected"></option>
                        @foreach (var item in @ViewBag.ListInterval)
                        {
                            <option value="@item.IntType" @(ViewBag.ICSRetentionPeriodTemp.ICHistoryIntType == item.IntType ? "selected" : "")>@item.IntType</option>
                        }
                    </select>
                }
            </td>
        </tr>

    </table>

    <button data-action="@Url.Action("/VerifyA2")" Class="btn btn-default normal-submit-verifysave-action-button @(CurrentUser.HasTask(TaskIdsOCS.OCSRetentionPeriodChecker.INDEX) ? "" : "hidden") " confirm-msg="Are you sure you want to approve?" value="Approve">@Locale.ApproveBtn</button>
    <button data-action="@Url.Action("/VerifyR2")" Class="btn btn-default normal-submit-verifydelete-action-button @(CurrentUser.HasTask(TaskIdsOCS.OCSRetentionPeriodChecker.INDEX) ? "" : "hidden")" confirm-msg="Are you sure you want to reject?" value="Reject">@Locale.RejectBtn</button>
    <a href="@Url.Action("/Index")" class="btn btn-default secure-nav  @(CurrentUser.HasTask(TaskIdsOCS.OCSRetentionPeriodChecker.INDEX) ? "" : "hidden")">@Locale.btnClose</a>

</div>
}
<script src="~/Scripts/App/app.js"></script>