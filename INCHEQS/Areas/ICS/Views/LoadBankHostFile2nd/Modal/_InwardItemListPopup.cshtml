@using INCHEQS.Resources
@using INCHEQS.Common
@{
    ViewBag.Title = "InwardItemList";
    var i = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Imported Item Details</title>
</head>
<body>
	<div><h4>Imported Item Details</h4></div>
	<div style="overflow-y: scroll; height:500px;">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>No.</th>
					<th>UIC</th>
					<th>Cheque Number</th>
					<th>Issuing Bank</th>
					<th>Issuing Branch</th>
					<th>Issuer Account Number</th>
					@*<th>Transaction Code</th>*@
					<th>Amount</th>
					<th>Host Status</th>
		
				</tr>
			</thead>
			<tbody>
				@foreach (var row in ViewBag.NcfHistory.Rows)
				{
                <tr>
                    <td>@{i++;} @i</td>
                    <td>@row["fldUIC"]</td>
                    <td>@row["fldChequeSerialNo"]</td>
                    <td>@row["fldIssueBankCode"]</td>
                    <td>@row["fldIssueBranchCode"]</td>
                    <td>@row["fldAccountNumber"]</td>
                    @*<td>@row["fldTransCode"]</td>*@
                    @*<td>@row["fldAmount"]</td>*@
                    <td>@((((row["fldAmount"])).ToString("n")))</td>
                    <td>@row["fldHostStatus"]</td>
                </tr>
				}
			</tbody>
		</table>
	</div>
</body>
</html>
