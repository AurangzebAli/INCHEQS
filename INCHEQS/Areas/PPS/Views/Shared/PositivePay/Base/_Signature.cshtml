
<table style="line-height: 23px; margin-top: 30px;">
    <tr>
        <td class="col-sm-4">
            <span>Name: </span>
            <span>@ViewBag.SignatureInfo.fldSignatureAccName</span>
        </td>
    <tr>

    <tr>
        <td class="col-sm-4">
            <img src="data:image/png;base64, @ViewBag.SignatureInfo.fldSignatureImage" style="width:200px; height:100px;border: 1px solid #000;" />
        </td>
    </tr>

    <tr>
        <td class="col-sm-4">
            <span>Signing Condition</span>
            <span class="red">@ViewBag.SignatureInfo.fldSignatureStatus</span>
        </td>
    <tr>

</table>