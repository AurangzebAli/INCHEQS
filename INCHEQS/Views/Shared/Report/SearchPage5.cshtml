@{
    ViewData["Title"] = "Report Page";
}
@using INCHEQS.Resources
@using INCHEQS.Common
<form id="searchForm" action="@Url.Action("GenerateReport")" method="POST" class="form-inline" target="_blank">
    <div id="search-fields-section">
        <h4>Reports > ICS > @ViewBag.SearchPage.PageTitle</h4>
        <hr />
        <div class="row">
            <div class="form-horizontal col-sm-2">
                <label style="font-size-adjust:initial">Cheque Clearing Date</label>
            </div>
            <div class="form-horizontal col-sm-6">
                <strong style="font-size-adjust:initial"> From:</strong>
                <input type="text" value="@ViewBag.ClearingDate" id="fldstartDate" name="fldStartDate" class="form-date" style="height:25px" />
                <strong style="font-size-adjust:initial"> To:</strong>
                <input type="text" value="@ViewBag.ClearingDate" id="fldendDate" name="fldEndDate" class="form-date" style="height:25px" />

            </div>
        </div>
        <p></p>

        @*<div class="row">
            <div class="form-horizontal col-sm-2">
                <label style="font-size-adjust:initial">Presenting Bank Branch</label>
            </div>
            <div class="form-horizontal col-sm-2">
                <select class="form-control" name="txtBankBranch" id="ajaxPresentingBankBranchList">
                    <option value="All">All</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-horizontal col-sm-2">
                <label style="font-size-adjust:initial">Issuing Account Number</label>
            </div>
            <div class="form-horizontal col-sm-2">
                <input class="form-control" type="text" name="txtIssuingAccNum" autocomplete="off" />
            </div>
        </div>

        <div class="row">
            <div class="form-horizontal col-sm-2">
                <label style="font-size-adjust:initial">Cheque Status</label>
            </div>
            <div class="form-horizontal col-sm-2">
                <select class="form-control" name="txtChequeStatus" id="fldChequeStatus">
                    <option value="All">All</option>
                    <option value="OR-ICL">OR-ICL</option>
                    <option value="Pending">Pending</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                </select>
            </div>
        </div>


        <div class="row">
            <div class="form-horizontal col-sm-2">
                <label style="font-size-adjust:initial">Host Status</label>
            </div>
            <div class="form-horizontal col-sm-2">
                <select class="form-control" name="txtHostStatus" id="ajaxHostStatusList">
                    <option value="All">All</option>
                </select>
            </div>
